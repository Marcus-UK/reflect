<h1>Listing Articles</h1>
 
<%= link_to 'New Reflection', new_reflection_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
  <% @reflections.each do |reflection| %>
    <tr>
      <td><%= reflection.title %></td>
      <td><%= reflection.text %></td>
      <td><%= link_to 'Show', reflection_path(reflection) %></td>
      <td><%= link_to 'Edit', edit_reflection_path(reflection) %></td>
      <td><%= link_to 'Delete', reflection_path(reflection),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>